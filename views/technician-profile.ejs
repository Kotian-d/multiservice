<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= technician.name %> - Profile</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <style>
    body { background: #f8f9fa; }
    .profile-card { box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075); border: 0; }
    .avatar { width: 100px; height: 100px; object-fit: cover; }
    .status-badge { font-size: 0.75rem; padding: 0.375rem 0.75rem; }
    .metric { font-size: 2rem; font-weight: 700; }
    .section-divider { border-left: 3px solid #0d6efd; padding-left: 1.5rem; }
  </style>
</head>
<body class="py-4">
  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm mb-4">
    <div class="container">
      <a class="navbar-brand fw-bold" href="/">
        <i class="fas fa-tools me-2 text-primary"></i>TechDashboard
      </a>
      <div class="navbar-nav ms-auto">
        <a class="btn btn-outline-primary btn-sm" href="/">
          <i class="fas fa-arrow-left me-1"></i>All Technicians
        </a>
      </div>
    </div>
  </nav>

  <div class="container">
    <div class="row justify-content-center">
      <!-- Main Profile Card -->
      <div class="col-lg-8">
        <div class="card profile-card">
          <div class="card-header bg-primary text-white">
            <div class="d-flex align-items-center">
              <div class="flex-shrink-0">
                <% if (technician.photo) { %>
                  <img src="/uploads/<%= technician.photo %>" class="rounded-circle avatar" alt="<%= technician.name %>">
                <% } else { %>
                  <div class="bg-primary bg-opacity-25 rounded-circle avatar d-flex align-items-center justify-content-center text-white">
                    <i class="fas fa-user fs-3"></i>
                  </div>
                <% } %>
              </div>
              <div class="flex-grow-1 ms-3">
                <h2 class="mb-1 fw-bold"><%= technician.name %></h2>
                <p class="mb-2">Technician ID: #<%= technician.technicianId %></p>
                <span class="badge status-badge 
                  <%= technician.status === 'active' ? 'bg-success' : 
                     technician.status === 'busy' ? 'bg-warning' : 'bg-secondary' %>">
                  <i class="fas fa-circle me-1"></i><%= technician.status.toUpperCase() %>
                </span>
              </div>
            </div>
          </div>

          <div class="card-body">
            <!-- Contact & Location -->
            <div class="row mb-4">
              <div class="col-md-6">
                <div class="d-flex align-items-center mb-3">
                  <i class="fas fa-mobile-alt text-muted me-3 fs-5"></i>
                  <div>
                    <div class="small text-muted">Phone</div>
                    <div class="fw-bold"><%= technician.phone %></div>
                  </div>
                </div>
                <% if (technician.email) { %>
                <div class="d-flex align-items-center">
                  <i class="fas fa-envelope text-muted me-3 fs-5"></i>
                  <div>
                    <div class="small text-muted">Email</div>
                    <div class="fw-bold"><%= technician.email %></div>
                  </div>
                </div>
                <% } %>
              </div>
              <div class="col-md-6">
                <div class="d-flex align-items-center">
                  <i class="fas fa-map-marker-alt text-muted me-3 fs-5"></i>
                  <div>
                    <div class="small text-muted">Location</div>
                    <div class="fw-bold"><%= technician.location %></div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Key Metrics -->
            <div class="row g-3 mb-4">
              <div class="col-4 text-center border-end">
                <div class="metric text-primary"><%= technician.sessions || 0 %></div>
                <div class="small text-muted">Sessions</div>
              </div>
              <div class="col-4 text-center border-end">
                <div class="metric text-success">
                  <%= technician.rating || 0 %><i class="fas fa-star ms-1 text-warning small"></i>
                </div>
                <div class="small text-muted">Rating</div>
              </div>
              <div class="col-4 text-center">
                <div class="metric text-info"><%= avgResponseTime %></div>
                <div class="small text-muted">Avg Response</div>
              </div>
            </div>

            <!-- Last Active -->
            <div class="row mb-4">
              <div class="col-12">
                <div class="d-flex align-items-center text-muted">
                  <i class="fas fa-clock me-2"></i>
                  <div>
                    <div class="small">Last Active</div>
                    <div class="fw-bold text-dark"><%= new Date(technician.lastLogin).toLocaleString('en-IN') %></div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Action Buttons -->
          <div class="card-footer bg-light border-0 pt-0">
            <div class="d-flex gap-2 flex-wrap">
              <a href="/technicians/<%= technician.id %>/edit" class="btn btn-outline-primary btn-sm">
                <i class="fas fa-edit me-1"></i>Edit
              </a>
              <a href="#" class="btn btn-outline-success btn-sm" onclick="startSession()">
                <i class="fab fa-whatsapp me-1"></i>WhatsApp Session
              </a>
              <a href="/technicians/<%= technician.id %>/sessions" class="btn btn-outline-info btn-sm">
                <i class="fas fa-history me-1"></i>Sessions
              </a>
              <a href="#" class="btn btn-outline-danger btn-sm ms-auto" onclick="deactivate()">
                <i class="fas fa-power-off me-1"></i>Deactivate
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- Recent Sessions Sidebar -->
      <div class="col-lg-4">
        <div class="card profile-card h-100">
          <div class="card-header bg-light">
            <h6 class="mb-0 fw-bold">
              <i class="fas fa-history text-muted me-2"></i>
              Recent Sessions
            </h6>
          </div>
          <div class="card-body p-0">
            <% recentSessions.slice(0, 5).forEach(session => { %>
            <div class="p-3 border-bottom">
              <div class="d-flex justify-content-between align-items-start mb-1">
                <small class="fw-bold">#<%= session.id %></small>
                <span class="badge badge-sm 
                  <%= session.status === 'completed' ? 'bg-success' : 
                     session.status === 'active' ? 'bg-warning' : 'bg-secondary' %>">
                  <%= session.status %>
                </span>
              </div>
              <div class="small"><%= session.customer %> • <%= session.issue %></div>
              <div class="small text-muted mt-1">
                <%= new Date(session.date).toLocaleDateString() %> • <%= session.duration %>
              </div>
            </div>
            <% }) %>
            <% if (recentSessions.length === 0) { %>
            <div class="p-4 text-center text-muted">
              <i class="fas fa-inbox fs-3 mb-3 opacity-50"></i>
              <small>No recent sessions</small>
            </div>
            <% } %>
          </div>
          <div class="card-footer bg-white">
            <a href="/technicians/<%= technician.id %>/sessions" class="btn btn-link btn-sm p-0 text-decoration-none">
              View all sessions <i class="fas fa-arrow-right ms-1"></i>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function startSession() {
      if (confirm('Start WhatsApp session for <%= technician.name %>?')) {
        window.open('/browser/sessions/<%= technician.id %>', '_blank');
      }
    }

    function deactivate() {
      if (confirm('Deactivate <%= technician.name %>?')) {
        window.location.href = `/technicians/<%= technician.id %>/deactivate`;
      }
    }
  </script>
</body>
</html>
