<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Technician - <%= technician.name %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <style>
    .error { border-color: #dc3545 !important; }
    .error-message { color: #dc3545; font-size: 0.875em; margin-top: 0.25rem; }
  </style>
</head>
<body class="bg-light py-5">
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
      <a class="navbar-brand" href="/"><i class="fas fa-tools"></i> TechDashboard</a>
      <div class="navbar-nav">
        <a class="nav-link" href="/">← Technicians List</a>
        <a class="nav-link" href="/technicians/<%= technician.id %>">← View Profile</a>
      </div>
    </div>
  </nav>

  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="card shadow">
          <div class="card-header bg-warning text-dark">
            <h4 class="mb-0">
              <i class="fas fa-user-edit me-2"></i>Edit Technician
            </h4>
            <small>ID: #<%= technician.technicianId %> | <%= technician.name %></small>
          </div>
          <div class="card-body p-4">
            
            <% if (errors && errors.length > 0) { %>
            <div class="alert alert-danger alert-dismissible fade show">
              <i class="fas fa-exclamation-triangle me-2"></i>
              <strong>Please fix:</strong>
              <ul class="mb-0 mt-2">
                <% errors.forEach(error => { %>
                <li><%= error.msg %></li>
                <% }) %>
              </ul>
              <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
            <% } %>

            <form method="POST" action="/technicians/<%= technician.id %>/edit?_method=PUT">
              
              <div class="row mb-3">
                <div class="col-md-6">
                  <label class="form-label fw-bold">Name *</label>
                  <input type="text" class="form-control <%= errors && errors.find(e => e.path === 'name') ? 'error' : '' %>" 
                         name="name" value="<%= inputData ? inputData.name : technician.name %>" required>
                  <% if (errors && errors.find(e => e.path === 'name')) { %>
                    <div class="error-message"><%= errors.find(e => e.path === 'name').msg %></div>
                  <% } %>
                </div>
                <div class="col-md-6">
                  <label class="form-label fw-bold">Technician ID *</label>
                  <input type="text" class="form-control <%= errors && errors.find(e => e.path === 'technicianId') ? 'error' : '' %>" 
                         name="technicianId" value="<%= inputData ? inputData.technicianId : technician.technicianId %>" required>
                  <% if (errors && errors.find(e => e.path === 'technicianId')) { %>
                    <div class="error-message"><%= errors.find(e => e.path === 'technicianId').msg %></div>
                  <% } %>
                </div>
              </div>

              <div class="row mb-3">
                <div class="col-md-6">
                  <label class="form-label fw-bold">Phone *</label>
                  <input type="tel" class="form-control <%= errors && errors.find(e => e.path === 'phone') ? 'error' : '' %>" 
                         name="phone" value="<%= inputData ? inputData.phone : technician.phone %>" required>
                  <div class="form-text">+91XXXXXXXXXX format</div>
                  <% if (errors && errors.find(e => e.path === 'phone')) { %>
                    <div class="error-message"><%= errors.find(e => e.path === 'phone').msg %></div>
                  <% } %>
                </div>
                <div class="col-md-6">
                  <label class="form-label fw-bold">Rating (0-5) *</label>
                  <input type="number" step="0.1" min="0" max="5" 
                         class="form-control <%= errors && errors.find(e => e.path === 'rating') ? 'error' : '' %>" 
                         name="rating" value="<%= inputData ? inputData.rating : technician.rating %>" required>
                  <% if (errors && errors.find(e => e.path === 'rating')) { %>
                    <div class="error-message"><%= errors.find(e => e.path === 'rating').msg %></div>
                  <% } %>
                </div>
              </div>

              <div class="row mb-3">
                <div class="col-md-6">
                  <label class="form-label fw-bold">Latitude *</label>
                  <input type="number" step="any" 
                         class="form-control <%= errors && errors.find(e => e.path === 'lat') ? 'error' : '' %>" 
                         name="lat" value="<%= inputData ? inputData.lat : technician.lat %>" required>
                  <div class="form-text">Current: <%= technician.lat %></div>
                  <% if (errors && errors.find(e => e.path === 'lat')) { %>
                    <div class="error-message"><%= errors.find(e => e.path === 'lat').msg %></div>
                  <% } %>
                </div>
                <div class="col-md-6">
                  <label class="form-label fw-bold">Longitude *</label>
                  <input type="number" step="any" 
                         class="form-control <%= errors && errors.find(e => e.path === 'long') ? 'error' : '' %>" 
                         name="long" value="<%= inputData ? inputData.long : technician.long %>" required>
                  <div class="form-text">Current: <%= technician.long %></div>
                  <% if (errors && errors.find(e => e.path === 'long')) { %>
                    <div class="error-message"><%= errors.find(e => e.path === 'long').msg %></div>
                  <% } %>
                </div>
              </div>

              <div class="mb-3">
                <label class="form-label fw-bold">Current Location *</label>
                <input type="text" class="form-control <%= errors && errors.find(e => e.path === 'currentlocation') ? 'error' : '' %>" 
                       name="currentlocation" value="<%= inputData ? inputData.currentlocation : technician.currentlocation %>" required>
                <% if (errors && errors.find(e => e.path === 'currentlocation')) { %>
                  <div class="error-message"><%= errors.find(e => e.path === 'currentlocation').msg %></div>
                <% } %>
              </div>

              <div class="mb-4">
                <label class="form-label fw-bold">Status *</label>
                <select class="form-select <%= errors && errors.find(e => e.path === 'status') ? 'error' : '' %>" name="status" required>
                  <option value="offline" <%= (!inputData || inputData.status === 'offline') || technician.status === 'offline' ? 'selected' : '' %>>Offline</option>
                  <option value="active" <%= inputData && inputData.status === 'active' || technician.status === 'active' ? 'selected' : '' %>>Active</option>
                  <option value="busy" <%= inputData && inputData.status === 'busy' || technician.status === 'busy' ? 'selected' : '' %>>Busy</option>
                </select>
                <% if (errors && errors.find(e => e.path === 'status')) { %>
                  <div class="error-message"><%= errors.find(e => e.path === 'status').msg %></div>
                <% } %>
              </div>

              <div class="d-grid gap-2 d-md-flex justify-content-end">
                <a href="/technicians" class="btn btn-secondary me-md-2">
                  <i class="fas fa-times me-1"></i>Cancel
                </a>
                <a href="/technicians/<%= technician.id %>" class="btn btn-outline-info me-md-2">
                  <i class="fas fa-eye me-1"></i>View Profile
                </a>
                <button type="submit" class="btn btn-warning px-4">
                  <i class="fas fa-save me-1"></i>Update Technician
                </button>
              </div>
            </form>
          </div>
          
          <div class="card-footer bg-light text-muted text-center">
            <small>
              Last updated: <%= new Date().toLocaleString('en-IN') %> | 
              <a href="/technicians/<%= technician.id %>/delete" onclick="return confirm('Delete this technician?')">
                <i class="fas fa-trash text-danger me-1"></i>Delete
              </a>
            </small>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Auto-format Indian phone
    document.getElementById('phone').addEventListener('input', function(e) {
      let phone = e.target.value.replace(/\D/g, '');
      if (phone.length === 10) {
        e.target.value = '+91' + phone;
      }
    });
  </script>
</body>
</html>
